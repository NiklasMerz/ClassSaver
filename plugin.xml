<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%category.name"
            id="ClassSaver.commands.category">
      </category>
      <command
            name="%command.name"
            categoryId="ClassSaver.commands.category"
            id="ClassSaver.commands.saveClass">
      </command>
      <command
            name="%command.name.0"
            categoryId="ClassSaver.commands.category"
            id="ClassSaver.commands.configure">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ClassSaver.commands.saveClass"
            class="de.niklasmerz.classsaver.handlers.SaveHandler">
      </handler>
      <handler
            commandId="ClassSaver.commands.configure"
            class="de.niklasmerz.classsaver.handlers.ConfigureHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ClassSaver.commands.saveClass"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+8"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="%menu.label"
               mnemonic="%menu.mnemonic"
               id="ClassSaver.menus.sampleMenu">
            <command
                  commandId="ClassSaver.commands.saveClass"
                  mnemonic="%command.mnemonic"
                  id="ClassSaver.menus.saveClass">
            </command>
            <command
                  commandId="ClassSaver.commands.configure"
                  mnemonic="%command.mnemonic.0"
                  id="ClassSaver.menus.configure">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ClassSaver.toolbars.classSaverToolbar">
            <command
                  commandId="ClassSaver.commands.saveClass"
                  icon="icons/sample.gif"
                  tooltip="%command.tooltip"
                  id="ClassSaver.toolbars.saveClass">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
