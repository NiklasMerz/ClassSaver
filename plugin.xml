<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Class Saver"
            id="ClassSaver.commands.category">
      </category>
      <command
            name="Save class"
            categoryId="ClassSaver.commands.category"
            id="ClassSaver.commands.saveClass">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ClassSaver.commands.saveClass"
            class="de.niklasmerz.classsaver.handlers.ClassSaverHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ClassSaver.commands.saveClass"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+8"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="ClassSaver"
               mnemonic="M"
               id="ClassSaver.menus.sampleMenu">
            <command
                  commandId="ClassSaver.commands.saveClass"
                  mnemonic="S"
                  id="ClassSaver.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ClassSaver.toolbars.classSaverToolbar">
            <command
                  commandId="ClassSaver.commands.saveClass"
                  icon="icons/sample.gif"
                  tooltip="Save configured class"
                  id="ClassSaver.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
